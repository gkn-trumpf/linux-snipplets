#/bin/bash

if [ ! -z $EUID ];
then
  if [ "$EUID" -ne 0 ];
  then
    echo "Root permission required!";
    exit 1;
  fi
fi

OLD=$(ls -tr /boot/vmlinuz-* | head -n -2 | cut -d- -f2- |
    awk '{print "linux-image-" $0 " linux-headers-" $0}' )
if [ -n "$OLD" ]; then
    apt-get -qy remove --purge $OLD
fi
apt-get -qy autoremove --purge
