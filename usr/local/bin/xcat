#!/usr/bin/env bash

#
# This script is like cat,zcat but automatically switches the *cat processor for any given file!
#

function xcat()
{
  fInfo=$(file "$1");

  method='';
  methodInfo='';

  if [[ "${fInfo}" == *"gzip"* ]];
  then
    method='zcat';
#    methodInfo='gzip';
  elif [[ "${fInfo}" == *"bzip2"* ]];
  then
    method='bzcat';
#    methodInfo='bzip2';
  elif [[ "${fInfo}" == *"ASCII"* ]];
  then
    method='cat';
#    methodInfo='Plain Text';
  fi

  if [ -z "${method}" ];
  then
    echo "Unknown file/compression! ($1)" >&3;
    return 1;
  elif [ -z $(which "${method}") ];
  then
    echo "${method} is not installed!" >&3;
    return 1;
  fi

  $(which "${method}") "$1" >&1;

  return $?;
}

if [ -z "$1" ] || [ -z "$2" ];
then
 echo "Syntax: $(basename $0) [path] [target dictionary-file]";
  exit 1;
fi

test -f "$2.lock" && {
  echo "$2 is already locked by other process!";
  exit 1;
}

find "$1" -maxdepth 2 -regextype posix-extended -regex '^.*\.(txt|lst|gz|bz|bz2|zip|7z)$' -print0 | while IFS= read -r -d '' file;
do
  echo "Processing ${file}"
  xcat "${file}";
done
