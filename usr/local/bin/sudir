#!/bin/bash
_WORKDIR='';
_DIRUSER='';
_CMD=$SHELL;

usage()
{
  echo "-- Syntax --";
  echo "Sudir is like 'sudo' by automatically using the given directory-owner, like this:"
  echo -e "$> sudir [Path] [command / arguments]\n";
  exit 1;
}

if [[ $@ =~ '-h' ]] || [[ $@ =~ '--help' ]];
then
  usage;
fi

if [[ ${#} == 1 ]];
then
  if [[ -d "${1}" ]];
  then
        _WORKDIR="${1}";
  else
        _WORKDIR=$(pwd);
        _CMD="${@}";
  fi
else
  if [[ -d "${1}" ]];
  then
        _WORKDIR="${1}";
        _CMD="${@: 2}";
  else
        _WORKDIR=$(pwd);
        _CMD="${@}";
  fi
fi

if [[ ! -z "${_WORKDIR}" ]];
then
        _WORKDIR=$(realpath "${_WORKDIR}");
        _DIRUSER=$(stat -c '%G' "${_WORKDIR}");
else
        echo "Error: No Workdir given!"
        exit 1;
fi

if [[ -z $_CMD ]];
then
        _CMD=$SHELL;
fi

read -r -a cmd <<< "${_CMD}";

_CMD=${cmd[0]};
_ARGS='';

if [[ ${#cmd[@]} > 1 ]];
then
        _ARGS="'${cmd[@]: 1}'";
fi

if [[ ! -z "${_DIRUSER}" ]] && [[ "${_DIRUSER}" != "$USER" ]];
then
        sudo su ${_DIRUSER} - -c "${_CMD} ${_ARGS}";
else
        $_CMD;
fi
