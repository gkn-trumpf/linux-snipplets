#!/bin/bash

function syntaxHelp()
{
  echo "Syntax:";
  echo "Using STDIN: $(basename $0) [database-name] -h [hostname] -u [user] -p [pass]";
  echo "or";
  echo "Using file:  $(basename $0) {arguments like above} ./my-database.sql";
  exit 1;
}

if [[ -z $@ ]];
then
  syntaxHelp;
fi

# Check for STDIN
if [ ! -t 0 ];
then

  sqlBegin=$(mktemp);
cat << EOF > "${sqlBegin}"
  SET autocommit=0;
  SET unique_checks=0;
  SET foreign_key_checks=0;
  SET autocommit=0;
EOF

  sqlEnd=$(mktemp);
cat << EOF > "${sqlEnd}"
  COMMIT;
  SET autocommit=1;
  SET unique_checks=1;
  SET foreign_key_checks=1;
EOF

  cat ${sqlBegin} - ${sqlEnd} | pv -eta --rate | mysql --max_allowed_packet=256M $@;
  rm ${sqlBegin} ${sqlEnd};
elif [[ -f "${@: -1}" ]];
then
  sqlFile=$(realpath "${@: -1}");

  echo "Importing using SOURCE Payload from file ${sqlFile} ...";
  createTableStatement='';

  if [[ "${#}" -gt 1 ]];
  then
    createTableStatement="CREATE DATABASE IF NOT EXISTS \`${1}\`; USE \`${1}\`;";
  fi

  #fileBytes=$(stat --printf="%s" "${sqlFile}");

  read -r -d '' query << EOM
  SET autocommit=0;
  SET unique_checks=0;
  SET foreign_key_checks=0;
  SET autocommit=0;
  ${createTableStatement}
  SOURCE ${sqlFile};

  COMMIT;
  SET autocommit=1;
  SET unique_checks=1;
  SET foreign_key_checks=1;
EOM

  mysql ${@:2:$#-2} -Bse "${query//$'\n'/}";
else
  syntaxHelp;
fi
